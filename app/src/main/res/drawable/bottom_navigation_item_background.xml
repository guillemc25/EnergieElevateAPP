<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Color de fondo para el ítem seleccionado -->
            <stroke android:color="#000000" android:width="2dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Color de fondo para el ítem no seleccionado -->
            <stroke android:color="#000000" android:width="2dp" /> <!-- Color y ancho del borde para el ítem no seleccionado -->

        </shape>
    </item>
</selector>
