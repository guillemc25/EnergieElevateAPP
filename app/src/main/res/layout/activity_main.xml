<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/edtContrase単a"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="77dp"

        android:background="@drawable/borde_redondo"
        android:ems="10"
        android:gravity="center"
        android:hint="Contrase単a"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtCorreoUsuario" />

    <EditText
        android:id="@+id/edtCorreoUsuario"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="80dp"

        android:background="@drawable/borde_redondo"
        android:ems="10"
        android:gravity="center"
        android:hint="Correo Electronico/ Usuario"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnIniciarSesion"
        android:layout_width="162dp"
        android:layout_height="48dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="125dp"
        android:background="@drawable/borde_redondo"
        android:text="Iniciar Sesion"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtContrase単a" />

    <TextView
        android:id="@+id/txtReg"
        style="@android:style/Widget.Material.Light.TextView.SpinnerItem"
        android:layout_width="254dp"
        android:layout_height="48dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="77dp"
        android:text="多No tienes cuentas? Registrate"
        android:textColor="#030B12"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnIniciarSesion" />


</androidx.constraintlayout.widget.ConstraintLayout>