<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4A4C51"
    tools:context=".pantalla_principal">


    <TextView
        android:id="@+id/txtMinutosEjercicio"
        android:layout_width="152dp"
        android:layout_height="67dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/background_rounded"
        android:gravity="center"
        android:text="0"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.28"
        app:layout_constraintStart_toEndOf="@+id/txtCaloriasTotales"
        app:layout_constraintTop_toBottomOf="@+id/TxtCaloriasQuemadas" />

    <TextView
        android:id="@+id/TxtCaloriasQuemadas"
        android:layout_width="152dp"
        android:layout_height="67dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/background_rounded"
        android:gravity="center"
        android:text="0"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.28"
        app:layout_constraintStart_toEndOf="@+id/txtCaloriasTotales"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/txtComida_cena"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/bottom_rounded_border"
        android:gravity="left|center_vertical"
        android:padding="8dp"
        android:paddingStart="50dp"
        app:layout_constraintBottom_toTopOf="@+id/navPantalla_principal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCena"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtDesayuno"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/top_rounded_border"
        android:fontFamily="sans-serif-medium"
        android:gravity="left"
        android:padding="8dp"
        android:paddingStart="50dp"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCaloriasTotales" />

    <TextView
        android:id="@+id/txtDMerienda"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/square_background"
        android:fontFamily="sans-serif-medium"
        android:gravity="left"
        android:padding="8dp"
        android:paddingStart="50dp"
        android:textColor="#EDE9E9"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtComidas_comida" />

    <TextView
        android:id="@+id/txtComidasDesayuno"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/square_background"
        android:gravity="left|center_vertical"
        android:padding="8dp"
        android:paddingStart="50dp"
        android:textColor="#424040"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDesayuno" />

    <TextView
        android:id="@+id/txtComidas_comida"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/square_background"
        android:gravity="left|center_vertical"
        android:padding="8dp"
        android:paddingStart="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtComida" />

    <TextView
        android:id="@+id/txtComida"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/square_background"
        android:fontFamily="sans-serif-medium"
        android:gravity="left"
        android:padding="8dp"
        android:paddingStart="50dp"
        android:textColor="#F4F4F4"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtComidasDesayuno" />

    <TextView
        android:id="@+id/txtComida_merienda"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/square_background"
        android:gravity="center|left"
        android:padding="8dp"
        android:paddingStart="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDMerienda" />

    <TextView
        android:id="@+id/txtCena"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/square_background"
        android:fontFamily="sans-serif-medium"
        android:gravity="center|left"
        android:padding="9dp"
        android:paddingStart="50dp"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtComida_merienda" />

    <TextView
        android:id="@+id/txtCaloriasTotales"
        android:layout_width="184dp"
        android:layout_height="142dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/background_rounded"
        android:gravity="center"
        android:text="0"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navPantalla_principal"
        android:layout_width="407dp"
        android:layout_height="65dp"

        android:background="#D1D1D1"
        app:itemBackground="@drawable/bottom_navigation_item_background"
        app:itemIconSize="35dp"
        app:itemIconTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_menu" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Calorias Consumidas:"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="56dp"
        android:text="Calorias Quemadas:"
        android:textColor="#FDF9F9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="parent" />






</androidx.constraintlayout.widget.ConstraintLayout>
