<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".activity_pregunta_uno">


    <TextView
        android:id="@+id/edtPregunta1"
        android:layout_width="372dp"
        android:layout_height="83dp"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:text="¿Cual es tu objetivo Físico?"
        android:textColorHint="#000000"
        android:textSize="29sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.41"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRegre1" />

    <Spinner
        android:id="@+id/spObjetivo"
        android:layout_width="274dp"
        android:layout_height="54dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:spinnerMode="dropdown"
        android:background="@drawable/spinner_fondo"
        android:popupBackground="@drawable/spinner_fondo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/edtPregunta1"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btnSig1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/borde_reondo2"
        android:text="SIGUIENTE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spObjetivo"
        app:layout_constraintVertical_bias="0.414" />

    <Button
        android:id="@+id/btnRegre1"
        android:layout_width="64dp"
        android:layout_height="51dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="343dp"
        android:background="@drawable/flecha_negra_izquierda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>